{
  "extends": ["airbnb", "plugin:jest/recommended"],
  "plugins": ["jest"],
  "env": {
    "jest/globals": true
  },
  "rules": {
    "no-console": "off",
    "no-await-in-loop": "off",
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "valid-jsdoc": "error"
  }
}
